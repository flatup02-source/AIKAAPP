# Server Configuration
PORT=8080
NODE_ENV=development

# Cloudflare R2 Configuration (S3 Compatible)
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_access_key_id
R2_SECRET_ACCESS_KEY=your_secret_access_key
R2_BUCKET_NAME=your_bucket_name
# R2 Endpoint usually: https://<account_id>.r2.cloudflarestorage.com
R2_ENDPOINT=https://your_account_id.r2.cloudflarestorage.com

# Google Gemini API
GEMINI_API_KEY=your_gemini_api_key

# LINE Messaging API
LINE_CHANNEL_ACCESS_TOKEN=your_channel_access_token
LINE_CHANNEL_SECRET=your_channel_secret

# Circuit Breaker / Safety Limits
# 1 (safe), 0 (disabled - dangerous)
SAFETY_ENABLED=1
# Daily Analysis Limit (Count)
DAILY_REQUEST_LIMIT=100
# Estimated cost limit per day (in JPY, if applicable, otherwise logic handles request count mostly)
DAILY_COST_LIMIT_YEN=500
