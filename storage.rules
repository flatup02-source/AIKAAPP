rules_version = '2';

// Firebase Storage サービスを対象とする
service firebase.storage {
  // あなたのGCSバケットにマッチする
  match /b/{bucket}/o {
    
    // 'uploads' フォルダ内のすべてのファイルにマッチする
    // {fileName} はワイルドカードで、どんなファイル名にもマッチします
    match /uploads/{fileName} {
    
      // このルールは、誰でもファイルの書き込み（アップロード）を許可します。
      // これはテスト目的です。本番では `if request.auth != null;` のように
      // 認証済みユーザーのみに制限する必要があります。
      allow write: if true;
      
      // 読み取りは許可しない（必要に応じて変更してください）
      allow read: if false;
    }
  }
}