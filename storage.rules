rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // UID-based access control
    match /users/{uid}/{allPaths=**} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Optional: Restrict file types for uploads
    match /users/{uid}/videos/{fileName} {
      allow write: if request.auth != null && request.auth.uid == uid && request.resource.contentType.matches('video/.*');
    }
  }
}
